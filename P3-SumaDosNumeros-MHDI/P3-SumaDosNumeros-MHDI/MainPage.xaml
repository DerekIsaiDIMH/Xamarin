<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P3_SumaDosNumeros_MHDI.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Parctica 3: Suma de dos números" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Elabora: Derek Isai Morales Hurtado" FontSize="Title" Padding="30,10,30,10"/>
        <Entry x:Name="num1"
               HorizontalOptions="Center" VerticalOptions="Center"
               Placeholder="Ingrese primer número"
               Keyboard="Numeric"/>
        <Entry x:Name="num2"
            HorizontalOptions="Center" VerticalOptions="Center"
            Placeholder="Ingrese segundo número"
            Keyboard="Numeric"/>
        <Button x:Name="Sumar"
                HorizontalOptions="Center" VerticalOptions="Center"
                Text="Sumar"
                Clicked="Sumar_Clicked">
            
        </Button>
    </StackLayout>

</ContentPage>
