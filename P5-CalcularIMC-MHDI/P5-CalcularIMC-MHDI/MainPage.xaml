<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P5_CalcularIMC_MHDI.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Practica 5. Calcular IMC" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Elabora: Derek Isai Morales Hurtado" FontSize="Title" Padding="30,10,30,10"/>
        <Entry x:Name="Altura"
               Placeholder="Ingrese su Altura"
               Keyboard="Numeric"/>
        <Entry x:Name="Peso"
               Placeholder="Ingrese su Peso"
               Keyboard="Numeric"/>
        <Entry x:Name="IMC"
               Placeholder="Tu IMC"
               IsEnabled="False"/>
        <Button x:Name="Callcular"
                Text="Calcular"
                Clicked="Calcular_Clicked"></Button>
    </StackLayout>

</ContentPage>
